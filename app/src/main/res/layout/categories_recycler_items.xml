<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/categoryImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginVertical="5sp"
        android:contentDescription="@string/category_img_desc"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedRectangleImageView"
        tools:src="@drawable/beverages" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/project_font_bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="@string/categories" />

</FrameLayout>